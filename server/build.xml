<?xml version="1.0" encoding="UTF-8"?>
<project name="server" default="default" basedir=".">
    <description>Builds, tests, and runs the project server.</description>
    <import file="nbproject/build-impl.xml"/>

    <target name="-post-jar">
        <jar jarfile="dist/server-full.jar">
            <zipfileset src="${dist.jar}" excludes="META-INF/*" />
            <zipfileset src="lib/gson-2.2.4.jar" excludes="META-INF/*" />
            <manifest>
                <attribute name="Main-Class" value="ro.minimul.romania1930.Main"/>
            </manifest>
        </jar>
    </target>

</project>
